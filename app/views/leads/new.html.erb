<!-- provide custom subtitle for each page -->
<% content_for(:subtitle) do %> | New Customer Form<% end %>

<p class="bold">Please tell us about you:</p>


<div class="row">
	<div class="col-lg-offset-2 col-lg-8 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-0 col-xs-12">

		<%= form_for(@lead) do |l| %>

			<span class="field-label hidden">
				<%= l.label :name %>
			</span>
			<span class="field-input-area">
				<%= l.text_field :name, placeholder: "Your Name", autofocus: true %>
			</span><!-- end .field-input-area -->

			<span class="field-label hidden">
				<%= l.label :comany %>
			</span>
			<span class="field-input-area">
				<%= l.text_field :company, placeholder: "Your Company" %>
			</span><!-- end .field-input-area -->

			<span class="field-label hidden">
				<%= l.label :company_size %>
			</span>
			<span class="field-input-area">
				<%= l.text_field :company_size, placeholder: "How many employees work in-office?" %>
			</span><!-- end .field-input-area -->

			<span class="field-label hidden">
				<%= l.label :how_you_found_us %>
			</span>
			<span class="field-input-area">
				<%= l.text_field :how_you_found_us, placeholder: "How did you find us?" %>
			</span><!-- end .field-input-area -->

			<span class="field-label hidden">
				<%= l.label :sustainability_goals %>
			</span>
			<span class="field-input-area">
				<%= l.text_area :sustainability_goals, placeholder: "What are your sustainability goals?" %>
			</span><!-- end .field-input-area -->

			<p class="text-center action-area">
				<%= l.submit class: 'btn btn-success btn-lg' %>
				<!-- todo replace text with "become a client" -->
			</p>

		<% end %><!-- end form for new customer lead -->

	</div><!-- end .col -->
</div><!-- end .row -->

